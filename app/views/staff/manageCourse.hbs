<div class="form">
    <a href="/staff/addCourse">
        <button type="submit" class="btn add">Add Course</button>
    </a>
    <form action="/staff/searchCourse" method="post">
        <input type="text" class="find" name="query" placeholder="Search..">
        <input type="submit">
    </form>
    <table>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Assign Course To User</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        {{#each course}}
            <tr>
                <th>{{this.name}}</th>
                <th>{{this.description}}</th>
                <th>{{this.category.name}}</th>
                <th>
                    <button class="btn add" onclick="window.location.href='/staff/addCourseToUser'">Add</button>
                </th>
                <th>
                    <button class="btn add" onclick="window.location.href='/staff/updateCourse?course_id={{_id}}'"
                    >Update</button>
                </th>
                <th>
                    <button class="btn add" onclick="onDelete('{{_id}}')">Delete</button>
                </th>
            </tr>
        {{/each}}
    </table>
</div>

<script>
    function onDelete(user_id) {
        try {
            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({
                "delete_id": user_id
            });

            const requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("/staff/deleteCourse", requestOptions)
                    .then(response => response.text())
                    .then(result => {
                        window.location.reload();
                        console.log(result)
                    })
                    .catch(error => console.log('error', error));
        } catch (e) {
            console.log(e);
        }
    }
</script>