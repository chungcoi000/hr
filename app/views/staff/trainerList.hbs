<div class="form">

    <form action="/api/getTrainer">
        <input id="searchfield" type="text" class="find" name="query" placeholder="Search..">
        <button type="submit" class="btn add" onsubmit=searchUser()>Search</button>
    </form>

    <table>
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Education</th>
            <th>Bio</th>
            <th>Course</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        {{#each user}}
            <tr>
                <td>{{this.username}}</td>
                <td>{{this.name}}</td>
                <td>{{this.dob}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telephone}}</td>
                <td>{{this.education}}</td>
                <td>{{this.bio}}</td>
                <td>
                    {{#each courseAssign}}
                        {{this.name}} <br>
                    {{/each}}
                </td>
                <td>
                    <a class="btn add" href='/api/updateInfo?user_id={{_id}}'>Update</a>
                </td>
                <td>
                    <a class="btn add" onclick="onDelete('{{_id}}')">Delete</a>
                </td>
            </tr>
        {{/each}}
    </table>
</div>

<script>
    function onDelete(user_id) {
        try {
            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({
                "delete_id": user_id
            });

            const requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("/staff/deleteAccount", requestOptions)
                    .then(response => response.text())
                    .then(result => {
                        window.location.reload();
                        console.log(result)
                    })
                    .catch(error => console.log('error', error));
        } catch (e) {
            console.log(e);
        }
    }
</script>