<div class="form">
    <form action="/api/updatePassword" method="post">
        {{#if error}}
            <p class="danger">{{message}}</p>
        {{/if}}
        <div class="container">
            <hr>
            <input type="hidden" name="user_id" value="{{user._id}}">

            <label for="password"><b>Old Password</b></label>
            <input type="password" placeholder="Enter Old Password" name="password" id="password" required>

            <label for="new_password"><b>New Password</b></label>
            <input type="password" placeholder="Enter New Password" name="new_password" id="new_password" required>

            <hr>

            <button type="submit" class="btn" onclick="window.location.href='/api/getTrainee'">Update</button>
            <button type="submit" class="btn" onclick="window.location.href='/api/getTrainee'">Cancel</button>
        </div>
    </form>
</div>