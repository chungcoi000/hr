<div class="form">
    <form action="/admin/createAccount" method="post">
        <div class="container">
            {{#if error}}
                <p class="danger">{{message}}</p>
            {{/if}}
            <hr>
            <label for="Username"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" id="Username" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" id="psw" required>

            <label class="label">Role</label>
            <div class="rs-select2 js-select-simple select--no-search">
                <select name="role">
                        <option disabled="disabled" selected="selected">Choose option</option>
                    {{#each roles}}
                        <option value={{name}}>{{name}}</option>
                    {{/each}}
                </select>
                <div class="select-dropdown"></div>
            </div>
            <hr>

            <a href="/admin/getAccount"><button type="submit" class="btn">Add</button></a>
            <a><button type="submit" class="btn" onclick="window.location.href = '/admin/getAccount'">Return</button></a>
        </div>
    </form>
</div>
