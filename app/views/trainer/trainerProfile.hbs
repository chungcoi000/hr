<div class="form">
    <form action="/api/getTrainer">
        <div class="container">
            <hr>

            <label for="email"><b>Email</b></label>
            <input type="text" name="Email" id="email" required value={{email}}>

            <label for="name"><b>Name</b></label>
            <input type="text" name="name" id="name" required value={{name}}>

            <label for="dob"><b>DoB</b></label>
            <input type="text" name="dob" id="dob" required value={{dob}}>

            <label for="education"><b>Education</b></label>
            <input type="text" name="education" id="education" required value={{education}}>

            <label for="bio"><b>Bio</b></label>
            <input type="text" name="bio" id="bio" required value={{bio}}>

            <hr>

            <button type="submit" class="btn">Update Profile</button>
            <button type="submit" class="btn">Update Password</button>
        </div>
    </form>
</div>