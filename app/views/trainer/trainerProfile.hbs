<div class="form">
    <form>
        <div class="container">
            <hr>
            <input type="hidden" name="user_id" value="{{user._id}}">
            <label for="name"><b>Name</b></label>
            <input type="text" name="name" id="name" disabled="disabled" value="{{user.name}}">

            <label for="dob"><b>Date of Birth</b></label>
            <input type="text" name="dob" id="dob" disabled="disabled" value="{{user.dob}}">

            <label for="email"><b>Email</b></label>
            <input type="text" name="email" id="email" disabled="disabled" value="{{user.email}}">

            <label for="telephone"><b>Telephone</b></label>
            <input type="text" name="telephone" id="telephone" disabled="disabled" value="{{user.telephone}}">

            <label for="education"><b>Education</b></label>
            <input type="text"name="education" id="education" disabled="disabled" value="{{user.education}}">

            <label for="bio"><b>Bio</b></label>
            <input type="text" name="bio" id="bio" disabled="disabled" value="{{user.bio}}">

            <hr>
            <a class="btn" href='/api/updateInfo?user_id={{user._id}}'>Update Profile</a>
            <a class="btn" href="/api/updatePassword?user_id={{user._id}}">Update Password</a>
        </div>
    </form>
</div>